@page
@model Eksamensprojekt_1_semester.Pages.BoatDescriptions.GetAllBoatDescriptionsModel
@{
    ViewData["title"] = "Vores både";
}
<head>
    <h1>@ViewData["title"]</h1>
</head>

<body>
    <p>
        Hillerød Sejlklub er en klub for jollesejlere.
        Vi har altid plads til børn og voksne, som vil sejle for deres fornøjelses skyld, for det sociale samvær, og evt. selv medvirke eller støtte andre sejlere i konkurrencesejlads.
    </p>
    @foreach (var båd in Model.Boats)
    {
        <div class="card">
            <div class="container">
                <p hidden="@true">@båd.Id</p>
                <h4><b>@båd.Type</b></h4>
                <p>@foreach(var description in Model.BoatDescriptions)
                {
                    if(description.Type==båd.Type)
                    {
                        @description.Description
                    }
                }
                </p>
                <b>Specifikationer:</b>
                <p>Størrelse: @båd.Size</p>
            </div>
            <div>
                <a class="btn btn-primary btn-sm" type="button" title="Rediger"
                    asp-page="EditBoatDescriptions" asp-route-id="@båd.Id">Rediger</a>
            </div>
        </div>
    }
</body>