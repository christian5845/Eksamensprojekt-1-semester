@page
@model Eksamensprojekt_1_semester.Pages.BoatMaintenance.MaintenanceLogModel
@{
}

<h1>Vedligeholdelseslog</h1>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr class="text-center">
			<th>
				Type
			</th>
			<th>
				Antal reparationer
			</th>
			<th>
				Alder
			</th>
			<th>
                Senest vedligeholdt/synet
            </th>
			<th>
                Handlinger
            </th>
		</tr>
	</thead>
	<tbody class="text-center">
		@if (Model.MaintenanceLogs != null)
		{
			foreach (var log in Model.MaintenanceLogs)
			{
				<tr>
					<td>
						@log.Type
					</td>
					<td>
						@log.RepairCount
					</td>
					<td>
						@log.Age år
					</td>
					<td>
						@log.LastServiced
					</td>
					<td>
						<a class="btn btn-primary btn-sm" type="button" title="Rediger"
						   asp-page="EditLog" asp-route-id="@log.LogId">Rediger</a>
                        <a class="btn btn-danger btn-sm" type="button" title="Slet"
                           asp-page="DeleteLog" asp-route-id="@log.LogId">Slet</a>
                    </td>
				</tr>
			}
		}
	</tbody>
</table>

<p>
    <a asp-page="/BoatMaintenance/CreateLog" class="btn btn-primary">Opret ny log</a>
</p>

