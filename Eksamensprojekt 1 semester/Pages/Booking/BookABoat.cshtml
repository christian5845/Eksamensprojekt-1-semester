@page
@model Eksamensprojekt_1_semester.Pages.Booking.BookABoatModel
@{
}
<h1>Book en båd</h1>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>
				Model
			</th>
			<th>
				Størrelse
			</th>
			<th>
				Pris Pr. Dag
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.BookABoat != null)
		{
			foreach (var boat in Model.BookABoat)
			{
				<tr>
					<td>
						@boat.Type
					</td>
					<td>
						@boat.Size
					</td>
					<td>
						@boat.PricePerDay
					</td>
				</tr>
			}
		}
	</tbody>
</table>